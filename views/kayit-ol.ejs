<!DOCTYPE html>
<html lang="tr-TR">
  <head>
    <%- include('src/head') %>
  </head>
  <body>
    <%- include('src/navbar') %> <%- include('src/load') %>
    <div class="alert-bg">
      <div class="alert-window">
        <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_qpwbiyxf.json" background="transparent" speed="1.5" style="width: 200px; height: 200px; margin: auto;" autoplay loop> </lottie-player>
        <h1>Hata!</h1>
        <p style="font-size: 20px;">Böyle bir e-posta adresi yok!</p>
        <button class="tmm-btn">tamam</button>
      </div>
    </div>
    <% if(hata !=undefined){ %>
    <div class="alert-bg2">
      <div class="alert-window2">
        <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_qpwbiyxf.json" background="transparent" speed="1.5" style="width: 200px; height: 200px; margin: auto;" autoplay loop> </lottie-player>
        <h1>Hata!</h1>
        <p style="font-size: 20px;">
          <%=hata%>
        </p>
        <button class="tmm-btn">tamam</button>
      </div>
    </div>
    <% } %>
    <div class="container">
      <br />
      <br />
      <br />
      <div class="email-img-div">
        <img src="https://cdn.jsdelivr.net/gh/Nurislam-Lord/images@main/sign-up-email.svg" alt="" />
        <img src="https://cdn.jsdelivr.net/gh/Nurislam-Lord/images@main/profile.svg" style="display: none;" alt="" />
        <img src="https://cdn.jsdelivr.net/gh/Nurislam-Lord/images@main/password.svg" style="display: none;" alt="" />
      </div>
      <div class="form-giris-dis">
        <form action="" method="post" style="overflow: hidden; width: 329px; position: relative; display: flex; flex-direction: row;">
          <div style="display: inline-block; position: relative;" id="form1">
            <i class="fa-regular fa-envelope" style="font-size: 23px; margin-right: -30px; z-index: 10; position: absolute; top: 50px; left: 15px;"></i><br />
            <input style="margin: 20px 0px;" name="email" type="text" class="input" autocomplete="off" placeholder="E-posta" />
            <button class="sonraki-btn" type="button">Sonraki</button>
          </div>
          <div style="display: inline-block; position: relative;" id="form2">
            <i class="fa-solid fa-user" style="font-size: 23px; margin-right: -30px; z-index: 10; position: absolute; bottom: 102px; left: 15px; display: inline-block;"></i>
            <input maxlength="20" style="margin: 20px 0px; display: inline-block;" name="ad" type="text" class="input" autocomplete="off" placeholder="Ad"/><br />
            <button style="display: inline-block;" class="sonraki-btn" type="button">Sonraki</button>
          </div>
          <div style="display: inline-block; position: relative;" id="form3">
            <i class="fa-solid fa-lock" style="font-size: 23px; margin-right: -30px; z-index: 10; position: absolute; bottom: 102px; left: 15px; display: inline-block;"></i>
            <input style="margin: 20px 0px; display: inline-block;" name="sifre" type="password" class="input" autocomplete="off" placeholder="Şifre"  /><br />
            <button style="display: inline-block;" class="sonraki-btn" type="submit">Sonraki</button>
          </div>
        </form>
      </div>
    </div>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script src="kayit-ol.js"></script>
    <script src="index.js"></script>
    <script src="/socket.io/socket.io.js"></script>
  </body>
</html>
